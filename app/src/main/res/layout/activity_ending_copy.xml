<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="hikaru.moreorless.Activities.EndingActivty"
    android:background="@color/md_grey_900"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_ending_"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="hikaru.moreorless.Activities.EndingActivty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_900">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:id="@+id/elevated">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/loader"
            app:indicatorName="BallPulseIndicator"
            android:layout_below="@+id/share"
            android:layout_centerVertical="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboard"
            app:srcCompat="@drawable/ic_globe"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tint="@color/md_grey_50"
            android:layout_alignBottom="@+id/share"
            android:layout_toRightOf="@+id/share"
            android:layout_toEndOf="@+id/share" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            app:srcCompat="@drawable/ic_stars"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tint="@color/md_grey_50"
            android:layout_toLeftOf="@+id/share"
            android:layout_toStartOf="@+id/share"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_alignBottom="@+id/share" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_share"
            android:tint="@color/md_grey_50"
            android:layout_below="@+id/play_again"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <hikaru.moreorless.Util.ButtonShift
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:id="@+id/play_again"
            android:text="@string/play_again"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="false"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/play_again"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:textSize="35sp"
                android:fontFamily="sans-serif-black"
                android:layout_height="match_parent"
                android:id="@+id/high"
                android:gravity="center"
                android:layout_weight="75" />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:fontFamily="sans-serif-thin"
                android:gravity="top|center"
                android:text="@string/zero"
                android:textColor="#FFF"
                android:textSize="54sp" />

        </LinearLayout>

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true">
        </com.google.android.gms.ads.NativeExpressAdView>

        <hikaru.moreorless.RevealLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/reveal_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:textSize="32sp"
                android:textColor="#FFF"
                android:id="@+id/reveal_view"
                />

        </hikaru.moreorless.RevealLayout>

    </RelativeLayout>


</RelativeLayout>
