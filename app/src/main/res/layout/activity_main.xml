<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hikaru.moreorless.Activities.MainActivity"
    android:background="@color/md_deep_purple_600">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <hikaru.moreorless.Util.ScalableVideoView
            android:layout_width="1152dp"
            android:layout_height="648dp"
            android:id="@+id/bg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/loader"
            android:layout_gravity="bottom|center"
            app:indicatorName="BallPulseIndicator" />

    </FrameLayout>

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/main"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_icon"
            android:tint="#FFFFFF"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_name"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="@string/more_or_less"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true">

        <!--<ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/play"
            android:layout_toEndOf="@+id/play"
            android:layout_gravity="center"
            android:tint="@color/md_grey_50"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_settings_outline"
            android:id="@+id/settings"
            android:scaleY="1.2"
            android:scaleX="1.2"/>-->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/md_grey_50"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_play_circle_filled"
            android:id="@+id/play" />

        </RelativeLayout>

    </RelativeLayout>

    <hikaru.moreorless.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/reveal_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:id="@+id/reveal_view"
            />
    </hikaru.moreorless.RevealLayout>

</RelativeLayout>
