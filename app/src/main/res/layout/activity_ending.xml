<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="hikaru.moreorless.Activities.EndingActivty"
    android:background="@color/md_grey_900"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_ending_"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="hikaru.moreorless.Activities.EndingActivty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_900">

    </FrameLayout>

    <hikaru.moreorless.RevealLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/reveal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:textColor="#FFF"
            android:textSize="32sp" />

    </hikaru.moreorless.RevealLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:id="@+id/elevated">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/adView"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            app:indicatorName="BallPulseIndicator" />

        <ImageButton
            android:id="@+id/leaderboard"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loader"
            android:layout_toEndOf="@+id/share"
            android:layout_toRightOf="@+id/share"
            android:layout_marginBottom="16dp"
            android:tint="@color/md_grey_50"
            app:srcCompat="@drawable/ic_globe" />

        <ImageButton
            android:id="@+id/rate"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loader"
            android:layout_toLeftOf="@+id/share"
            android:layout_toStartOf="@+id/share"
            android:tint="@color/md_grey_50"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_stars" />

        <ImageButton
            android:id="@+id/share"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loader"
            android:layout_centerHorizontal="true"
            android:tint="@color/md_grey_50"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_share" />

        <hikaru.moreorless.Util.ButtonShift
            android:id="@+id/play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/share"
            android:layout_centerHorizontal="true"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:layout_marginBottom="16dp"
            android:text="@string/play_again"
            android:textColor="#000" />

        <TextView
            android:id="@+id/high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-black"
            android:gravity="top|center"
            android:text="@string/zero"
            android:textColor="#FFF"
            android:textSize="54sp" />

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    </RelativeLayout>


</RelativeLayout>
